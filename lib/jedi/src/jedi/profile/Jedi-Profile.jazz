  (method (collect-extensions dir)
    (let ((extensions '()))
      (iterate-directory~ dir
        (lambda (file)
          (let ((ext (get-extension~ file)))
            (when (and ext (not (member? ext extensions test: ci=?)))
              (set! extensions (cons (downcase ext) extensions))))))
      (sort string<? extensions)))


