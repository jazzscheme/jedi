(package jedi
  
  (title "Jedi")
  (description "Jazz IDE")
  (authors "Guillaume Cartier")
  (stage release)
  (library "lib")
  (root "src")
  (install jedi.install)
  (products (jedi (title "Jedi")
                  (product jedi.product)
                  (run jedi.run)
                  (update jedi
                          jedi.convert
                          jedi.data.bindings
                          jedi.data.preferences
                          jedi.product
                          jedi.run
                          jedi.services
                          jedi.validate)
                  (build (jedi include-compiler?: #t bundle: "jedi" resources: "resources"))
                  (dependencies preinstalled
                                jazz.designer.ui
                                jazz.ide
                                samples
                                jedi.install))
            (jedi.install (update jedi.install)
                          (dependencies jazz)))
  (project ".project"))
