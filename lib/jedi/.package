                                jazz.editor.c
                                jazz.editor.commonlisp
                                jazz.editor.diff
                                jazz.editor.jazz
                                jazz.editor.scheme
                                jazz.editor.sql
                                jazz.editor.tex
                                jazz.library
                                jazz.media
                                jazz.network
                                jazz.platform
                                jazz.profile
                                jazz.project
                                jazz.recorder
                                jazz.schema
                                jazz.system
                                jazz.ui
                                jazz.validation
                                jazz.website
                                gambit
                                contrib.irregex
                                contrib.statprof
                                srfi-19
                                kernel
                                profiler
                                jedi.install))
            (jedi.install (update jedi.install)
